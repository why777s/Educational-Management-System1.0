<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.Student" table="student" schema="mySchool">
        <id name="sid">
            <column name="sid" sql-type="varchar(8)" length="8"/>
        </id>
        <property name="sname">
            <column name="sname" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(2)" length="2" not-null="true"/>
        </property>
        <property name="jiguan">
            <column name="jiguan" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="scredit">
            <column name="scredit" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="collegeByYxh" class="Entity.College">
            <column name="yxh" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>